<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<HBox fx:id="newFolderNode" alignment="BOTTOM_CENTER" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="com.geekbrains.client.controllers.NewFolderWindowController">
    <VBox alignment="CENTER">
        <Label fx:id="newFolderInfoLabel" HBox.hgrow="ALWAYS"/>
        <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
            <TextField fx:id="newFolderNameTextField" HBox.hgrow="ALWAYS"/>
        </HBox>
        <HBox HBox.hgrow="ALWAYS">
            <VBox HBox.hgrow="ALWAYS" alignment="BOTTOM_LEFT">
                <Button fx:id="newFolderOKButton" alignment="BOTTOM_LEFT" text="Ok"/>
            </VBox>
            <VBox HBox.hgrow="ALWAYS" alignment="BOTTOM_RIGHT">
                <Button fx:id="newFolderCancelButton" alignment="BOTTOM_RIGHT" text="Cancel" />
            </VBox>
        </HBox>
    </VBox>
</HBox>